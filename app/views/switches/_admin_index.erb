<table class="table table-hover">
  <tr>
    <th> To_Device</th>
    <th> From_NIC</th>
    <th> To_Port</th>
    <th> Color</th>
    <th></th>
    <th></th>
  </tr>
  <% for cable in @switch.switch_cables %>
      <tr>
        <td><%= cable.to_Device %></td>
        <td>NIC <%= cable.from_port %></td>
        <td><%= cable.to_port %></td>
        <% if cable.color == 'Yellow' %>
            <td>
              <li class="label label-warning"><%= cable.color %></li>
            </td>
        <% elsif cable.color == 'Blue' %>
            <td>
              <li class="label label-info"><%= cable.color %></li>
            </td>
        <% elsif cable.color == 'Red' %>
            <td>
              <li class="label label-important"><%= cable.color %></li>
            </td>
        <% end %>
        <td><%= link_to 'Edit', edit_switch_switch_cable_path(@switch, cable) %></td>
        <td><%= link_to 'Destroy', [@switch, cable], method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>

  <% end %>
</table>
