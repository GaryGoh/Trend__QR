<%= form_for(@server, :html => {:multipart => true}) do |f| %>
    <% if @server.errors.any? %>
        <div id="error_explanation" xmlns="http://www.w3.org/1999/html">
          <h2><%= pluralize(@server.errors.count, "error") %> prohibited this server from being saved:</h2>

          <ul>
            <% @server.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <form class="form-horizontal">
      <div class="control-group">
        <label class="control-label" for="server_name">Server Name</label>

        <div class="controls">
          <%= f.text_field :name, id: "server_name", placeholder: "Server name" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">QR code</label>

        <div class="controls">
          <%= f.text_field :QR_code, readonly: true %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="IP">IP Address</label>

        <div class="controls">
          <%= f.text_field :IP, id: "IP", placeholder: "IP address" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label" for="IDR">IDRACE</label>

        <div class="controls">
          <%= f.text_field :IDR, id: "IDR", placeholder: "IDRACE" %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="CPU">CPU</label>

        <div class="controls">
          <%= f.number_field :CPU, id: "CPU", in: 0..64, placeholder: "CPU" %> Core
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="RAM">RAM</label>

        <div class="controls">
          <%= f.number_field :RAM, id: "RAM", in: 0..256, step: 4, placeholder: "RAM" %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="Storage">Storage</label>

        <div class="controls">
          <%= f.number_field :Storage, id: "Storage", in: 0..10240, step: 64, placeholder: "Storage" %>
        </div>
      </div>

      <div class="control-group">
        <label class="control-label" for="MAC">MAC</label>

        <div class="controls">
          <%= f.text_field :MAC, id: "MAC", placeholder: "MAC" %>
        </div>
      </div>
      <div class="control-group">
        <label class="control-label">Image</label>

        <div class="controls">
          <%= f.file_field :image %>
        </div>
      </div>

      <!--<div class="actions">-->
      <%= f.submit class: 'btn' %>
      <!--</div>-->
    </form>


<% end %>
