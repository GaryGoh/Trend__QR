<div class="row-fluid">
  <table class="table">
    <% if notice != nil %>
        <div class="alert alert-success">
          <%= notice %>
        </div>
    <% end %>


    <tr>
      <td><b>Image:</b></td>
      <td>
        <% if @server.has_image? %>
            <%= image_tag @server.image_path, size: "300x200", id: "pic" %>
        <% else %> No image!
        <% end %>
      </td>
    </tr>

    <tr>
      <td><b>Server_Name:</b></td>
      <td> <%= @server.name %>  </td>
    </tr>

    <tr>
      <td><b>QR_code:</b></td>
      <td><%= @server.QR_code %> </td>
    </tr>

    <tr>
      <td><b>IP:</b></td>
      <td><%= @server.IP %> </td>
    </tr>

    <tr>
      <td><b>IDR:</b></td>
      <td><%= @server.IDR %> </td>
    </tr>

    <tr>
      <td><b>CPU:</b></td>
      <td><%= @server.CPU %>  </td>
    </tr>

    <tr>
      <td><b>RAM:</b></td>
      <td><%= @server.RAM %></td>
    </tr>

    <tr>
      <td><b>Storage:</b></td>
      <td><%= @server.Storage %> </td>
    </tr>

    <tr>
      <td><b>MAC:</b></td>
      <td> <%= @server.MAC %></td>
    </tr>
    <tr>
      <% qr_url = 'http://0.0.0.0:3000/servers/'+params[:id] %>
      <%= image_tag goqr(data: qr_url, size: '64x64') %>  </br></br>
    </tr>

  </table>

  <h5><%= link_to 'Edit', edit_server_path(@server) %> |
  <%= link_to 'Add Cable', new_server_cable_path(@server) %>  |
  <%= link_to 'Back', servers_path %>
    </h5>
  </br>
  </br>

  <!--show the connnected cables-->

  <h2 class="text-info">Cables in <%= @server.name %></h2>

  <table class="table table-hover">
    <tr>
      <th> To_end</th>
      <th> From_NIC</th>
      <th> To_NIC</th>
      <th> Color</th>
      <th></th>
      <th></th>
    </tr>
    <% for cable in @server.cables %>
        <tr>
          <td><%= cable.to_end %></td>
          <td>NIC <%= cable.from_nic %></td>
          <td><%= cable.to_nic %></td>
          <td><%= cable.color %></td>
          <td><%= link_to 'Edit', edit_server_cable_path(@server, cable) %></td>
          <td><%= link_to 'Destroy', [@server, cable], method: :delete, data: {confirm: 'Are you sure?'} %></td>
        </tr>

    <% end %>
  </table>
</div>




