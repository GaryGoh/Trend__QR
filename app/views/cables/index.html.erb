<h1>Listing cables</h1>

<table>
  <tr>
    <th>Server</th>
    <th>To end</th>
    <th>From nic</th>
    <th>To nic</th>
    <th>Color</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @cables.each do |cable| %>
  <tr>
    <td><%= cable.server_id %></td>
    <td><%= cable.to_end %></td>
    <td><%= cable.from_nic %></td>
    <td><%= cable.to_nic %></td>
    <td><%= cable.color %></td>
    <td><%= link_to 'Show', cable %></td>
    <td><%= link_to 'Edit', edit_cable_path(cable) %></td>
    <td><%= link_to 'Destroy', cable, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

